FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-6;
        relTol           0.001;
        minIter          5;
        maxIter          200;
        smoother         GaussSeidel;
        nPreSweeps       1;
        nPostSweeps      3;
        nFinestSweeps    3;
        scaleCorrection true;
        directSolveCoarsest false;
        cacheAgglomeration on;
        nCellsInCoarsestLevel 50;
        agglomerator     faceAreaPair;
        mergeLevels      1;
    }

    "(U|kt|kl|omega)"
    {
      solver           PBiCG;
      preconditioner   DILU;
      tolerance        1e-6;
      relTol           0.001;
      minIter          1;
    }

}

SIMPLE
{
    nNonOrthogonalCorrectors 1;
}

relaxationFactors
{
   fields
    {
        p               0.3;
    }
    equations
    {
        U               0.7;
        "(kt|kl|omega)" 0.7;
    }
}

cache
{
    grad(U);
}

