FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
 default         none;
 ddt(kt) steadyState;
 ddt(kl) steadyState;
 ddt(omega) steadyState;
}

gradSchemes
{
    limitedGauss    cellLimited Gauss linear 1;
    default         Gauss linear;
}

divSchemes
{
    default         none;
    div(phi,U)      Gauss linearUpwindV limitedGauss;
    div((nuEff*dev2(T(grad(U))))) Gauss linear;
    div(phi,kt)     Gauss limitedLinear 1;
    div(phi,kl)     Gauss limitedLinear 1;
    div(phi,omega)  Gauss limitedLinear 1;
    div(U,p)     Gauss linear;
}

laplacianSchemes
{
    default Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

fluxRequired
{
    default         no;
    p               ;
}

wallDist {
  method meshWave;
}

